#include <stdio.h>

int main()
{
    int M, N;
    printf("Enter the size of the matrices (M and N): ");
    scanf("%d%d", &M, &N);

    int A[M][N], B[M][N], C[M][N];
    printf("Enter the elements of the first matrix:\n");
    for(int i=0; i<M; i++)
    {
        for(int j=0; j<N; j++)
        {
            scanf("%d", &A[i][j]);
        }
    }

    printf("Enter the elements of the second matrix:\n");
    for(int i=0; i<M; i++)
    {
        for(int j=0; j<N; j++)
        {
            scanf("%d", &B[i][j]);
        }
    }

    printf("The sum of the two matrices is:\n");
    for(int i=0; i<M; i++)
    {
        for(int j=0; j<N; j++)
        {
            C[i][j] = A[i][j] + B[i][j];
            printf("%d ", C[i][j]);
        }
        printf("\n");
    }

    return 0;
}

